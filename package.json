{
  "name": "linebreak",
  "version": "0.3.0",
  "description": "An implementation of the Unicode Line Breaking Algorithm (UAX #14)",
  "repository": {
    "type": "git",
    "url": "https://github.com/devongovett/linebreaker.git"
  },
  "keywords": [
    "unicode",
    "text",
    "wrapping"
  ],
  "author": "Devon Govett <devongovett@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/devongovett/linebreaker/issues"
  },
  "homepage": "https://github.com/devongovett/linebreaker",
  "dependencies": {
    "base64-js": "0.0.8",
    "brfs": "^1.3.0",
    "unicode-trie": "^0.3.0"
  },
  "devDependencies": {
    "brfs-babel": "^1.0.0",
    "coffee-script": "^1.7.1",
    "mocha": "*",
    "rollup": "^0.41.6",
    "rollup-plugin-babili": "^3.0.0",
    "rollup-plugin-browserify-transform": "^0.1.0",
    "rollup-plugin-coffee-script": "^1.1.0",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-node-resolve": "^3.0.0"
  },
  "scripts": {
    "build:es": "rollup -c es.rollup.config.js",
    "build:umd": "rollup -c umd.rollup.config.js",
    "prepublish": "npm run build:es && npm run build:umd",
    "postpublish": "rm -rf dist/",
    "test": "node_modules/mocha/bin/mocha"
  },
  "main": "dist/linebreaker.umd.min.js",
  "module": "dist/linebreaker.es.min.js",
  "browserify": {
    "transform": [
      "brfs"
    ]
  }
}
